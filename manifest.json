{
  "manifest_version": 3,
  "name": "Snom Dialer",
  "version": "1.1",
  "description": "Send call commands from tel: links to your Snom phone.",
  "homepage_url": "https://mkay.io",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["contextMenus", "notifications", "storage"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
