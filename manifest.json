{
  "manifest_version": 3,
  "name": "Snom Dialer",
  "version": "1.0",
  "description": "Send call commands from tel: links to your Snom phone.",
  "homepage_url": "https://mkay.io,",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["contextMenus", "tabs", "notifications", "storage"],
  "host_permissions": ["http://*/", "https://*/"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
