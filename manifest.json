{
  "manifest_version": 3,
  "name": "Snom Dialer",
  "version": "1.0",
  "description": "Send call commands from tel: links to your Snom phone.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["contextMenus", "tabs", "notifications"],
  "host_permissions": ["http://*/", "https://*/"],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
